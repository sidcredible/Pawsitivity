{
  "$async": true,
  "type": "object",
  "additionalProperties": true,
  "required": [
    "name",
    "email",
    "phone",
    "animal_id"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "pattern": "^(([^<>()\\[\\]\\.,;:\\s@\\\"]+(\\.[^<>()\\[\\]\\.,;:\\s@\\\"]+)*)|(\\\".+\\\"))@(([^<>()[\\]\\.,;:\\s@\\\"]+\\.)+[^<>()[\\]\\.,;:\\s@\\\"]{2,})$"
    },
    "phone": {
      "type": "string",
      "pattern": "^[0][1-9]\\d{9}$|^[1-9]\\d{9}$"
    },
    "animal_id": {
      "type": "string"
    }
  }
}
